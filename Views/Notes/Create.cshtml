
@model Oppimispäiväkirja_versio1.Models.ViewModels;

@{
    ViewData["Title"] = "Create";
}



<section class="jumbotron">
    <div class="text-center">
        <h1 class="display-4">OPPIMISPÄIVÄKIRJA</h1>
        <h3><em>Lisää aiheita, kirjoita muistiinpanoja ja seuraa edistymistäsi.</em></h3>
    </div>
</section>
<section class="container-fluid">
    <div class="text-center">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                    <form id="myForm">
                        <label for="titlesDropdown"><b>Otsikko</b>@Html.LabelFor(model => model.Topics)</label>
                        <select class="form-control" id="titlesDropdown" name="titlesDropdown">
                            
                        </select>
                    </form>
                    @*<input asp-for="Topic.Title" class="form-control" id="myId" onmouseover="changeBackground(this.id, 'lightgray'); "onmouseout="changeBackground(this.id, 'white');" />
                    <span asp-validation-for="Topic.Title" class="text-danger"></span>*@
                    </div>
            </form>
            <div class="form-group">
                <label asp-for="Note.NoteText" class="control-label">Muistiinpano:</label>
                <input asp-for="Note.NoteText" class="form-control" />
                <span asp-validation-for="Note.NoteText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Tallenna" class="btn btn-primary" />
            </div>

        </div>
        </div>
        <div class="page-item">
            <p>
                <a asp-action="Index" class="btn btn-light" button style='font-size:18px'>Takaisin listaan<i class='fas fa-cat'></i></a>
                <br/>
            </p>
        </div>
    </div>
</section>


@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
