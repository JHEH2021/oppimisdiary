@model Oppimispäiväkirja_versio1.Models.Note

@{
    ViewData["Title"] = "Delete";
}

<section class="jumbotron">
    <div class="text-center">
        <h1 class="display-4">OPPIMISPÄIVÄKIRJA</h1>
        <h3><em>Lisää aiheita, kirjoita muistiinpanoja ja seuraa edistymistäsi.</em></h3>
    </div>
</section>
<section class="container-fluid">
    <div class="text-center">
        <div class="row">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Topic.Title)
                            Otsikko
                        </th>
                        <th>
                            @*@Html.DisplayNameFor(model => model.Description)*@
                            Kuvaus
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NoteText)
                            Muistiinpano:
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            @Html.DisplayFor(model => model.Topic.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.NoteText)
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div>
            <form asp-action="Delete" id="delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Poista" class="btn btn-danger" />
            </form>
        </div>
        <div><p></p></div>
        <div>
            <div class="page-item">
                <p>
                    <a asp-action="Index" class="btn btn-light" button style="font-size:18px;">Takaisin listaan<i class='fas fa-cat'></i></a>
                </p>
            </div>
        </div>
    </div>
    <div>
    </div>
</section>

