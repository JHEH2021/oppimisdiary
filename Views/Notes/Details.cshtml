@model Oppimispäiväkirja_versio1.Models.Note

@{
    ViewData["Title"] = "Details";
}

<section class="jumbotron">
    <div class="text-center">
        <h1 class="display-4">OPPIMISPÄIVÄKIRJA</h1>
        <h3><em>Lisää aiheita, kirjoita muistiinpanoja ja seuraa edistymistäsi.</em></h3>
    </div>
</section>
<section class="container-fluid">
    <div class="text-center">
        <div class="row">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Topic)
                            Otsikko
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NoteText)
                            Muistiinpano:
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            @Html.DisplayFor(model => model.Topic)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.NoteText)
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.Id"><i class="material-icons">&#xe3c9;</i></a>
                <div><br /></div>
                <p>
                    <a asp-action="Index" class="btn btn-light" button style='font-size: 18px; background-color: peachpuff'>Takaisin listaan<i class='fas fa-cat'></i></a>
                </p>
            </div>
        </div>
    </div>
</section>
