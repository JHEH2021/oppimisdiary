@model Oppimispäiväkirja_versio1.Models.ToDo

@{
    ViewData["Title"] = "Edit";
}

<section class="container-fluid">
    <div class="text-center">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div class="row">
                        <div class="col-md-6">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Id"/>
                            <div class="form-group">
                                <br/>
                                <label asp-for="Description" class="control-label">Tehtävä</label>
                                <input asp-for="Description" class="form-control"  id="munId3" onmouseover="changeBackground(this.id, 'lightgray');"
                                       onmouseout="changeBackground(this.id, 'white');"/>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="IsDone"/> Valmis@*@Html.DisplayNameFor(model => model.IsDone)*@
                                </label>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Tallenna" class="btn btn-primary"/>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="page-item">
            <p>
                <a asp-action="Index" class="btn btn-light" button style='font-size:18px;'>Takaisin listaan<i class='fas fa-cat'></i></a>
                <br />
            </p>
        </div>
        <br />
    </div>
</section>
