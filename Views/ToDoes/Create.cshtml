@model Oppimispäiväkirja_versio1.Models.ToDo

@{
    ViewData["Title"] = "Create";
}

<section class="jumbotron">
    <div class="text-center">
        <h1 class="display-4">OPPIMISPÄIVÄKIRJA</h1>
        <h3><em>Lisää aiheita, kirjoita muistiinpanoja ja seuraa edistymistäsi.</em></h3>
    </div>
</section>
<section class="container-fluid">
    <div class="text-center">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div class="row">
                        <div class="col-md-6">
                            <form asp-action="Create">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <br/>
                                    <label asp-for="Description" class="control-label"><strong>Uusi tehtävä</strong></label>
                                    <input asp-for="Description" class="form-control" id="munId1" onmouseover="changeBackground(this.id, 'lightgray');"
                                           onmouseout="changeBackground(this.id, 'white');"/>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                                <div class="form-group form-check">
                                    <input class="form-check-input" asp-for="IsDone" /><label asp-for="IsDone" class="control-label"  id="munId2" onmouseover="changeBackground(this.id, 'lightgray');"
                                                                                              onmouseout="changeBackground(this.id, 'white');">Tehtävä valmis</label>
                                    <span asp-validation-for="IsDone" class="text-danger"></span>
                                </div>
                                    <div class="form-group">
                                        <input type="submit" value="Tallenna" class="btn btn-primary" />
                                    </div>
                            </form>
                        </div>
                    </div>
                </form>
            </div>
        </div>
            <div class="page-item">
                <p>
                    <a asp-action="Index" class="btn btn-light" button style="font-size:18px">Takaisin listaan<i class='fas fa-cat'></i></a>
                    <br/>
                </p>
            </div>
        <br/>
        </div>
</section>